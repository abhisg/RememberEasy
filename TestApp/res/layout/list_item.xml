<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginRight="69dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/metAt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/worksAt"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/worksAt"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="You met this person in Kanpur"
        android:textSize="17dip" />

    <TextView
        android:id="@+id/worksAt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="21dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="This person works at Microsoft"
        android:textSize="17dip" />

    <TextView
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/metAt"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/metAt"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="This person is a researcher in Computer Vision"
        android:textSize="17dip" />

</RelativeLayout>

